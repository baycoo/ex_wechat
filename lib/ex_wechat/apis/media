//---------------------
//  wechat media
//---------------------

@endpoint https://api.weixin.qq.com/cgi-bin

# upload media, needed_params(type)
function: upload_media
path: /media/upload
http: post
params: access_token

# get media, added_params(media_id)
function: get_media
path: /media/get
http: get
params: access_token

# add forever news
function: add_permanent_news
path: /material/add_news
http: post
params: access_token

# add permanent image
function: add_permanent_image
path: /media/uploadimg
http: post
params: access_token

# add other permanent image
function: add_other_permanent
path: /material/add_material
http: post
params: access_token

# get permanent resource
function: get_permanent
path: /material/get_material
http: post
params: access_token

# delete permanent resource
function: delete_permanent
path: /material/del_material
http: post
params: access_token

# update permanent news
function: update_permanent_news
path: /material/update_news
http: post
params: access_token

# get permanent resources count
function: get_permanent_resources_count
path: /material/get_materialcount
http: get
params: access_token

# get media list
function: get_media_list
path: /material/batchget_material
http: post
params: access_token
